.bs-header {
  position: relative;
  background-image: url(images/header-bg.jpg);
}

.bs-header .mdl-layout__header-row {
  padding: 0;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
}

.mdl-layout__title {
  font-size: 14px;
  text-align: center;
  font-weight: 300;
}

.is-compact .mdl-layout__title span {
  display: none;
}

.bs-logo-row {
  min-height: 200px;
}

.is-compact .bs-logo-row {
  min-height: auto;
}

.bs-logo {
  background: url(images/logo.png) 50% no-repeat;
  background-size: cover;
  height: 150px;
  width: 150px;
  margin: auto auto 10px;
}

.is-compact .bs-logo {
  height: 50px;
  width: 50px;
  margin-top: 7px;
}

.bs-navigation-row {
  text-transform: uppercase;
}

.bs-navigation-row  .mdl-navigation {
  float: center;
  text-align: center;
  width: 100%;
}

.bs-navigation-row .mdl-navigation__link {
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}

.bs-header .mdl-layout__drawer-button {
    background-color: rgba(197, 197, 197, 0.44);
}

.bs-navigation-row .is-active {
  position: relative;
  font-weight: bold;
}

.bs-navigation-row .is-active:after {
  content: "";
  width: 70%;
  height: 2px;
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  left: 15%;
}

.bs-nav-next > .bs-nav-next__button {
  color: white;
  text-decoration: none;
}

.bs-nav-next .mdl-button {
  color: rgba(0,0,0,0.54);
  background-color: white;
}

.bs-nav-next__button {
  margin-top: 8px;
  margin-bottom: 8px;
}

.bs-nav-next__left-button {
  float: left;
}

.bs-nav-next__right-button {
  float: right;
}

body {
  background-color: #ECEFF1;
}

.bs-card .mdl-card__title {
  padding-bottom: 0;
}

.bs-blog-card-full-bg {
  background: url(images/example-blog03.jpg) center / cover;
}

.bs-blog-card-event-bg {
  background: url(images/example-blog05.jpg) center / cover;
}

.bs-blog-card-strip-bg {
  background: url(images/example-blog06.jpg) center / cover;
}

.bs-blog-card-compact .mdl-card__title {
  padding-bottom: 0;
}

.bs-blog-card-bg > .mdl-card__actions {
  height: 52px;
  padding: 16px;
  background: rgba(0, 0, 0, 0.2);
}

.bs-card-article-image {
  text-align: center;
}

img.article-image {
  width: 100%;
  height: auto;
}

.bs-max-width {
  max-width: 900px;
  margin: auto;
}

.bs-copy {
  max-width: 700px;
}

.no-padding {
  padding: 0;
}

.no-left-padding{
  padding-left: 0;
}

.no-bottom-padding {
  padding-bottom: 0;
}

.padding-top {
  padding: 10px 0 0;
}

.bs-share-btn {
  position: relative;
  float: right;
  top: -4px;
}

.demo-card-event > .mdl-card__actions {
    -webkit-align-items: center;
        -ms-flex-align: center;
            align-items: center;
    box-sizing: border-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}

.bs-contact .mdl-textfield {
  width: 100%;
}

.bs-contact form {
  max-width: 550px;
  margin: auto;
}

.mdl-mini-footer {
  background-color: rgb(96,125,139);
}

footer {
  background-image: url(images/footer-background.png);
  background-size: cover;
}

